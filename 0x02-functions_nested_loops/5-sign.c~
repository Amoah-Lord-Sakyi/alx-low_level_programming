#include "main.h"
/**
* print_sign - prints the sign of a number.
* @n: An input integer.
*Return: 1 if its greater than zero or 0 if its equal to zero
* or -1 if its less than zero.
*/
int print_sign(int n)
{
int n;
if (n > 0)
{
_putchar('+');
return (1);
}
else if (n < 0)
{
_putchar('-');
return (-1);
}
else
{
_putchar('0');
return (0);
}
}
